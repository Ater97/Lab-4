@model  IEnumerable<Lab_4.Models.Videogames>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Busqueda de videojuegos</h3>
    </div>
    <div class="panel-body">

        @using (Html.BeginForm("Search", "Videogames", FormMethod.Post))
            {
            <font size="3" color="black">
                <p>
                    <input type="text" name="text" placeholder="-nombre del videojuego-">
                    <input type="submit" value="Buscar" />
                </p>
